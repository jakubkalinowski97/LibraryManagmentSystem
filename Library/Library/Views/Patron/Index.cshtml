@model Library.Models.ListPatron

<div id="books">
    <h2>Patrons</h2>
    <div id="books-table">
        <table class="table table-condensed">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var patron in Model.Patrons)
                {
                    <tr class="book">
                        <td>@patron.ID</td>
                        <td>@patron.FirstName</td>
                        <td>@patron.LastName</td>
                        <td>
                            <a class="btn btn-sm btn-info" role="button" asp-controller="Patron" asp-action="Detail" asp-route-id="@patron.ID">Profile</a>
                        </td>
                        <td>
                            <a style="color: red; font-size: 20px" role="button" asp-controller="Patron" asp-action="Remove" asp-route-id="@patron.ID">X</a>
                        </td>
                    </tr>
                }
                <a class="btn btn-sm btn-success" role="button" asp-controller="Patron" asp-action="Add" >Add new patron</a>
            </tbody>
        </table>
    </div>
</div>